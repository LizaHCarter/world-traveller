form.form-inline(role='form', method='post', action='/vacations')
  input#lat(type='hidden', name='lat')
  input#lng(type='hidden', name='lng')
  .form-group
      label(for='name') Trip Name
      input.form-control#name(type='text', name='name', autofocus=true)
      label(for='start') Start Date
      input.form-control#start(type='date', name='start')
      label(for='end') End Date
      input.form-control#end(type='date', name='end')
    nline(role='form')
    button.btn.btn-default(type='submit') Save

